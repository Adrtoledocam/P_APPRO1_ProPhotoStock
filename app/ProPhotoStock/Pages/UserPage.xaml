<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProPhotoStock.Pages.UserPage"
             BackgroundColor="#20C6D2"
             Title="Profil">
    <VerticalStackLayout Padding="20" Spacing=" 25">

        <Image Source="logo.png" HeightRequest="225" HorizontalOptions="Center"/>

        <Border Background="White" StrokeThickness="0" StrokeShape="RoundRectangle 25" Padding="20" Margin="0,10">
            <VerticalStackLayout Spacing="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="{Binding UserName}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" />
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="E-mail : " FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                        <Label Text="{Binding Email}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="Compte : " FontAttributes="Bold" />
                        <Label Text="{Binding AccountType}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="Contrats : " FontAttributes="Bold" />
                        <Label Text="{Binding ContractsCount}" />
                    </HorizontalStackLayout>

                    
                    <!-- LogOut -->
                    <Button Text="Se dÃ©connecter" BackgroundColor="White" TextColor="#20C6D2" BorderColor="#20C6D2" BorderWidth="2" CornerRadius="20" HeightRequest="45" Clicked="OnLogoutClicked" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </Border>

    </VerticalStackLayout>
</ContentPage>