<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProPhotoStock.Pages.ContratctsPage"
             Title="Contrats">

    <CollectionView x:Name="ContractsList" ItemsLayout="VerticalList" SelectionMode="None" Margin="20">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Background="White" StrokeThickness="0" StrokeShape="RoundRectangle 20" Padding="15" Margin="0,10">

                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout >
                            <Label Text="Contrat # " FontAttributes="Bold" FontSize="16" />
                            <Label Text="{Binding ContractNumber}" FontSize="16" FontAttributes="Bold" />
                        </HorizontalStackLayout>
                        
                        <Label Text="{Binding Photographer}" FontSize="14" />
                        <Label Text="{Binding PhotoName}" FontSize="14" />
                        <Image Source="{Binding ImageUrl}" HeightRequest="150" Aspect="AspectFill" />
                        
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Date maximale :"  />
                            <Label Text="{Binding MaxDate}" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Type : "  TextColor="Black"   />
                            <Label Text="{Binding ContractType}"  TextColor="Black"  />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Usage : "  TextColor="Black"  />
                            <Label Text="{Binding ContractUsage}"  TextColor="Black"  />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="CoÃ»t :" FontAttributes="Bold" />
                            <Label Text="{Binding Cost}" FontSize="16" TextColor="#20C6D2" FontAttributes="Bold" />
                        </HorizontalStackLayout>
                        
                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>


</ContentPage>