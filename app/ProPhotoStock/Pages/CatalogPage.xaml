<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProPhotoStock.Pages.CatalogPage"
             BackgroundColor="White"             
             Title="CatalogPage">

    <Shell.TitleView>
        <!-- Filtres -->
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Categories : " VerticalOptions="Center" TextTransform="Uppercase" TextColor="White" />
            <HorizontalStackLayout Spacing="-5">
                <CheckBox x:Name="PaysageFilter" Color="White" CheckedChanged="OnFilterChanged"/>
                <Label Text="#Paysage" VerticalOptions="Center"  TextColor="White" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="-5">
                <CheckBox x:Name="PortraitFilter" Color="White" CheckedChanged="OnFilterChanged"/>
                <Label Text="#Portrait" VerticalOptions="Center" TextColor="White" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="-5">
                <CheckBox x:Name="SportFilter" Color="White" CheckedChanged="OnFilterChanged"/>
                <Label Text="#Sport" VerticalOptions="Center" TextColor="White" />
            </HorizontalStackLayout>

        </HorizontalStackLayout>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10" >
            <!-- Photos -->
            <CollectionView x:Name="PhotosList" ItemsLayout="VerticalList" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeThickness="0" Background="White" StrokeShape="RoundRectangle 20" Margin="0,0" Padding="15">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="{Binding photoTitle}" FontSize="16" FontAttributes="Bold" TextColor="Black" />
                                <Label Text="{Binding useName}"  FontSize="14" TextColor="Black"/>

                                <Image Source="{Binding photoUrl}" HeightRequest="180" Aspect="AspectFill" />

                                <HorizontalStackLayout Spacing="5">
                                    <Label Text="#" TextColor="#0F5F68" FontAttributes="Bold"/>
                                    <Label Text="{Binding tagName}" TextColor="#0F5F68" FontAttributes="Bold" />
                                </HorizontalStackLayout>

                                <Button Text="Acheter" BackgroundColor="#0F5F68" TextColor="White" CornerRadius="20" HeightRequest="45" FontAttributes="Bold" FontSize="20" Clicked="OnConfirmContratClicked" CommandParameter="{Binding .}"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>