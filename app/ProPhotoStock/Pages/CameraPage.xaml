<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProPhotoStock.Pages.CameraPage"
             Title="Photo">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Button Text="Prendre une photo" BackgroundColor="#0F5F68" TextColor="White" Clicked="OnTakePhotoClicked" />
        <Button Text="Choisir depuis la galerie" BackgroundColor="#0F5F68" TextColor="White" Clicked="OnPickPhotoClicked" />

        <Image x:Name="PreviewImage" HeightRequest="300" Aspect="AspectFill" IsVisible="False" />
        <Button Text="Continuer" BackgroundColor="#0F5F68" TextColor="White" IsVisible="False" x:Name="ContinueButton" Clicked="OnContinueClicked" />
    </VerticalStackLayout>

</ContentPage>